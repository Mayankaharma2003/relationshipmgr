<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">
    <widgets>
        <container-dialog id="CreatePartyDialog" button-text="Create Party">
            <form-single name="CreatePartyPerson" transition="createPartyAsPerson">

<!--                <auto-fields-entity entity-name="Party" include="pk" field-type="edit" />-->
                <auto-fields-entity entity-name="Person" include="nonpk" field-type="edit"/>
                <auto-fields-entity entity-name="PartyRole" include="all" field-type="edit"/>
                <field name="submitButton">
                    <default-field title="Create">
                        <submit/>
                    </default-field>
                </field>
            </form-single>
        </container-dialog>
    </widgets>

    <transition name="createParty">
        <service-call name="party.CreateParty.PartyPerson.create#PartyPerson"/>
        <default-response url="."/>
    </transition>
</screen>