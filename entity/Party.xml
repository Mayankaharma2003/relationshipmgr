<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    <entity entity-name="Party" package="oms.party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="partyTypeEnumId" type="id"/>
        <relationship type="one" related="Enumeration">
            <key-map field-name="partyTypeEnumId"/>
        </relationship>
        <seed-data>
            <moqui.basic.EnumerationType description="party type represent party belongs to" enumTypeId="PartyType"/>
            <moqui.basic.Enumeration description="Party as PERSON" enumId="PERSON" enumTypeId="PartyType"/>
            <moqui.basic.Enumeration description="Party as ORGANIZATION" enumId="ORGANIZATION" enumTypeId="PartyType"/>
        </seed-data>
        <relationship type="many" related="PartyRole"/>
    </entity>


    <entity entity-name="Organization" package="oms.party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="organizationName" type="text-medium" />
        <relationship type="one" related="Party"/>
    </entity>
    <entity entity-name="Person" package="oms.party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="firstName" type="text-medium" />
        <field name="lastName" type="text-medium" />
        <field name="birthDate" type="date" />
        <relationship type="one" related="Party"/>
    </entity>


<!--    Partyrole ek association table he jo many to many relationship stablish kr rha he party aur uske roles ke bich-->
    <entity entity-name="PartyRole" package="oms.party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="roleTypeEnumId" type="id" is-pk="true" />
        <relationship type="one" related="Enumeration">
            <key-map field-name="roleTypeEnumId"/>
        </relationship>
        <seed-data>
            <moqui.basic.EnumerationType description="party can play roles as" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as CUSTOMER" enumId="CUSTOMER" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as EMPLOYEE" enumId="EMPLOYEE" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as EMPLOYER" enumId="EMPLOYER" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as ACCOUNTANT" enumId="ACCOUNTANT" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as STUDENT" enumId="STUDENT" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as COLLEGE" enumId="COLLEGE" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as STAFF" enumId="STAFF" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Party as FACULTY" enumId="FACULTY" enumTypeId="RoleType"/>
        </seed-data>
        <relationship type="one" related="Party"/>
    </entity>

</entities>